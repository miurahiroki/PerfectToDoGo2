<p style ="color : Red"><%= @error %></p>
<%= form_tag action: :auth do %>
  <div class="field ">
    <%= label_tag :name, 'グループ名' %>:<br />
    <%= text_field_tag :name, '' %>
  </div>
  <div class="field">
    <%= label_tag :password, 'パスワード' %>:<br />
    <%= text_field_tag :password, '' %>
  <div>
  <%= hidden_field_tag :referer, flash[:referer] %>
  <%= submit_tag 'ログイン' %>
<% end %>
<%= link_to 'グループ作成', users_path %>