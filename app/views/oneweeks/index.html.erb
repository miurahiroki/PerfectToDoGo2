<%= form_tag({:action => "search"},{:method => "GET"}) do %> 
  <%= text_field_tag "search[name]",@name %>
  <%= submit_tag "検索" %>
  <%= link_to "リセット", oneweeks_path%>
<% end %>

<div style="position:absolute; top:50px; left:0px;">

<h1>月曜日</h1>
<table border="5">
  <thead>
    <tr>
      <th>予定日</th>
      <th>予定名</th>
      <th>重要度</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oneweeks.each do |oneweek| %>
      <tr>
        <% if oneweek.day.wday == 1 && Date.today.day + 7 > oneweek.day.day %>
          <td><%= oneweek.day %></td>
          <td><%= oneweek.name %></td>
          <td><%= oneweek.important %></td>
          <td><%= link_to '詳細', oneweek %></td>
          <td><%= link_to '編集', edit_task_path(oneweek) %></td>
          <td><%= link_to '削除', oneweek, method: :delete, data: { confirm: '本当に削除していいですか?' } %></td>
        <% end %>
      </tr>

    <% end %>
  </tbody>
</table>
<br>

